{
  "name": "vitessce-monorepo",
  "version": "2.0.0",
  "description": "Vitessce app and React component library",
  "author": "C McCallum",
  "homepage": "http://vitessce.io/",
  "license": "MIT",
  "repository": "https://github.com/vitessce/vitessce/",
  "keywords": [],
  "scripts": {
    "start": "pnpm -r --parallel start",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "format-check": "prettier --check --ignore-path .gitignore sites/ packages/",
    "format": "npm run format-check -- --write",
    "lint": "npm run format-check && eslint \"packages/*/src/**/*\" \"sites/*/src/**/*\"",
    "clean": "pnpm -r exec -- rm -rf node_modules"
  },
  "devDependencies": {
    "@pnpm/meta-updater": "^0.0.6",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-react": "^1.3.2",
    "@vitest/ui": "^0.16.0",
    "eslint": "^8.18.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^20.0.0",
    "prettier": "^2.7.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^4.7.4",
    "vite": "^2.9.9",
    "vitest": "^0.16.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
